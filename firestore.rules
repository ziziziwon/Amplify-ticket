rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===================================
    // 사용자 (users) 컬렉션
    // ===================================
    match /users/{userId} {
      // 본인 정보 읽기 허용, 관리자는 모든 사용자 읽기 허용
      allow read: if request.auth != null && 
                     (request.auth.uid == userId || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      
      // 본인 정보 쓰기 허용
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // 관리자는 모든 사용자 정보 수정 가능
      allow update, delete: if request.auth != null && 
                               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ===================================
    // 공연 (events) 컬렉션
    // ===================================
    match /events/{eventId} {
      // 모든 사용자 읽기 허용
      allow read: if true;
      
      // 관리자만 쓰기 허용
      allow write: if request.auth != null && 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ===================================
    // 티켓/주문 (tickets, orders) 컬렉션
    // ===================================
    match /tickets/{ticketId} {
      // 본인 티켓 읽기 허용, 관리자는 모든 티켓 읽기 허용
      allow read: if request.auth != null && 
                     (resource.data.userId == request.auth.uid || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      
      // 티켓 생성은 본인만 가능
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // 관리자만 수정/삭제 가능
      allow update, delete: if request.auth != null && 
                               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /orders/{orderId} {
      // 본인 주문 읽기 허용, 관리자는 모든 주문 읽기 허용
      allow read: if request.auth != null && 
                     (resource.data.userId == request.auth.uid || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      
      // 주문 생성은 본인만 가능
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // 관리자만 수정/삭제 가능
      allow update, delete: if request.auth != null && 
                               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ===================================
    // 공지사항 (notices) 컬렉션
    // ===================================
    match /notices/{noticeId} {
      // 모든 사용자 읽기 허용
      allow read: if true;
      
      // 관리자만 쓰기 허용
      allow write: if request.auth != null && 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ===================================
    // 1:1 문의 (inquiries) 컬렉션 ⭐ 중요!
    // ===================================
    match /inquiries/{inquiryId} {
      // 본인 문의 읽기 허용, 관리자는 모든 문의 읽기 허용
      allow read: if request.auth != null && 
                     (resource.data.userId == request.auth.uid || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      
      // 로그인한 사용자는 자신의 문의 생성 가능
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.status == 'pending';
      
      // 본인은 자신의 문의 수정 가능 (답변 전까지)
      allow update: if request.auth != null && 
                       resource.data.userId == request.auth.uid &&
                       resource.data.status == 'pending';
      
      // 관리자는 모든 문의 수정/삭제 가능 (답변 작성 등)
      allow update, delete: if request.auth != null && 
                               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ===================================
    // 배너 (banners) 컬렉션
    // ===================================
    match /banners/{bannerId} {
      // 모든 사용자 읽기 허용
      allow read: if true;
      
      // 관리자만 쓰기 허용
      allow write: if request.auth != null && 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ===================================
    // 관리자 로그 (adminLogs) 컬렉션
    // ===================================
    match /adminLogs/{logId} {
      // 관리자만 읽기/쓰기 허용
      allow read, write: if request.auth != null && 
                            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ===================================
    // 기타: 기본적으로 모든 접근 거부
    // ===================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}









